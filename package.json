{
  "name": "mailbox",
  "version": "1.0.0",
  "main": "./dist",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn run clean && yarn run tsc",
    "test": "yarn jest",
    "usecases": "yarn ts-node ./usecases.ts",
    "typecheck": "yarn tsc --noEmit",
    "lint": "tslint --project tsconfig.json -c tslint.json -t codeFrame lib/**/*.ts"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "tsc": "^1.20150623.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn typecheck"
    }
  },
  "dependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "commitlint": "^8.3.5"
  }
}
